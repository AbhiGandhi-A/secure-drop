{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "client/dist" }
    }
  ],
  "installCommand": "npm ci --prefix client",
  "buildCommand": "npm run build --prefix client",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://secure-drop-ipik.onrender.com/api/$1"
    },
    {
      "src": "/(assets/.*|favicon\\.ico|robots\\.txt|manifest\\.json)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
