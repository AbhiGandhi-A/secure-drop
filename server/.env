# ======================
# General settings
# ======================
PORT=8080
NODE_ENV=development
JWT_SECRET=change-this-secret
CORS_ORIGIN=*

# ======================
# MongoDB
# ======================
MONGODB_URI=mongodb://localhost:27017/

# ======================
# Storage settings
# ======================
STORAGE_DRIVER=local        # "local" or "s3"
UPLOAD_DIR=uploads          # Local uploads folder

# ======================
# File limits (bytes)
# ======================
ANON_MAX_FILE_BYTES=5242880        # 5 MB
FREE_MAX_FILE_BYTES=26214400       # 25 MB
PREMIUM_MAX_FILE_BYTES=262144000   # 250 MB

# ======================
# Expiry times (hours)
# ======================
ANON_MAX_EXPIRE_HOURS=24
FREE_MAX_EXPIRE_HOURS=168         # 7 days
PREMIUM_MAX_EXPIRE_HOURS=720      # 30 days

# ======================
# Virus scanning
# ======================
VIRUS_SCAN_ENABLED=false          # true/false

# ======================
# OpenAI API
# ======================
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ======================
# Stripe (for subscriptions)
# ======================
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxx
STRIPE_PRICE_MONTHLY=price_1234567890abcdef
STRIPE_PRICE_YEARLY=price_abcdef1234567890

# ======================
# AWS S3 (optional for file storage)
# ======================
AWS_REGION=ap-south-1
S3_BUCKET_NAME=my-bucket-name

